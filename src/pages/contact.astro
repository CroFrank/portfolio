---
import NavbarContact from "../components/NavbarContact.astro"
import Layout from "../layouts/Layout.astro"
import Form from "../components/Form"
const secret = import.meta.env.SECRET_PASSWORD
---

<Layout>
  <NavbarContact />
  <main class="flex-1">
    <h1 class="text-black">{secret ? secret : "jbg"}</h1>
    <div
      class="max-w-md mx-auto bg-white rounded-md p-8 shadow-lg shadow-yellow-400 mb-8 mt-4"
    >
      <h2 class="text-2xl font-semibold mb-6 text-yellow-800">Talk to me :)</h2>
      <Form secret={secret} client:load />
    </div>
  </main>
</Layout>
