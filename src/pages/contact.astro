---
import Layout from "../layouts/Layout.astro"
import Form from "../components/Form"
const secret = import.meta.env.SECRET_PASSWORD
---

<Layout>
  <main class="flex-1 items-center flex">
    <div
      class="w-[27rem] mx-auto bg-gray-50 rounded-md p-8 shadow-md shadow-yellow-800 mb-8 mt-4"
    >
      <h2 class="text-2xl font-semibold mb-6 text-yellow-700">Talk to me :)</h2>
      <Form secret={secret} client:load />
    </div>
  </main>
</Layout>
