---
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <main class="flex-1">
    <div
      class="max-w-md mx-auto bg-white rounded-md p-8 shadow-lg shadow-yellow-400 mb-8 mt-4"
    >
      <h2 class="text-2xl font-semibold mb-6 text-yellow-800">Talk to me :)</h2>

      <form action="#" method="post">
        <div class="mb-4">
          <label for="name" class="block text-gray-600 text-sm font-medium mb-2"
            >Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            class="w-full border-2 border-gray-300 rounded-md p-2"
            placeholder="John Doe"
            required
          />
        </div>

        <div class="mb-4">
          <label
            for="email"
            class="block text-gray-600 text-sm font-medium mb-2">Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="w-full border-2 border-gray-300 rounded-md p-2"
            placeholder="john.doe@example.com"
            required
          />
        </div>

        <div class="mb-4">
          <label
            for="message"
            class="block text-gray-600 text-sm font-medium mb-2">Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full border-2 border-gray-300 rounded-md p-2"
            placeholder="Your message here..."
            required></textarea>
        </div>

        <div class="mt-6 flex justify-between items-center">
          <button
            type="submit"
            class="bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-500"
          >
            Submit
          </button>
          <a
            href="/"
            class="text-blue-500 hover:text-blue-400 hover:scale-105 font-semibold"
            >Exit</a
          >
        </div>
      </form>
    </div>
  </main>
</Layout>
