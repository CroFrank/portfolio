---
import { Image } from "astro:assets"
import Tags from "./Tags.astro"

interface Props {
  url?: string
  alt?: string
  title?: string
  tags: string[]
  children?: HTMLElement | HTMLElement[]
  image: string
}

const {
  image = "",
  url = "#",
  alt = "Project image",
  title = "Project title",
  tags = ["Tags"],
} = Astro.props
---

<section class="w-full sm:w-9/12 p-4 md:w-1/2 lg:w-1/3">
  <article
    class="rounded-xl bg-yellow-600 p-3 shadow-lg shadow-indigo-500 duration-100 hover:scale-105 hover:transform hover:shadow-xl hover:shadow-white"
  >
    <a
      href={url}
      aria-label="link to project"
      class="flex flex-col items-center"
    >
      <div class="relative flex items-end overflow-hidden rounded-xl">
        <Image
          src={image}
          alt={alt}
          format="png"
          width={400}
          height={400}
          loading="eager"
          class="h-64"
        />
      </div>
      <div class="mt-1 p-2 w-full">
        <h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
        <Tags tags={tags} />
      </div>
    </a>
  </article>
</section>
