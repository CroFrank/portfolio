---
export interface Props {
  tags?: string[]
}

const { tags } = Astro.props
---

{
  tags && (
    <div class="mt-2 flex w-full flex-row flex-wrap justify-between px-5 ">
      {tags.map((tag) => (
        <span class="inline-block rounded py-2 text-sm text-black lg:py-1">
          #{tag}
        </span>
      ))}
    </div>
  )
}
