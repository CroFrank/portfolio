---
import Button from "./reusable/Button.astro"

const menuitems = [
  {
    title: "About",
    path: "#about",
  },
  {
    title: "Projects",
    path: "#projects",
  },
  {
    title: "Contact",
    path: "#contact",
  },
]
---

<nav
  class="bg-transparent p-5 flex flex-col items-center gap-5 sm:flex-row sm:justify-between mb-20"
>
  <div class="flex items-center space-x-4 sm:order-2">
    {
      menuitems.map((item) => (
        <a
          aria-label="navigation link"
          href={item.path}
          class="lg:px-3 text-lg hover:underline hover:text-xl"
        >
          {item.title}
        </a>
      ))
    }
  </div>
  <div class="flex items-center">
    <Button size="md">Download CV</Button>
  </div>
</nav>
