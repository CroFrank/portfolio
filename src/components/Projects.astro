---
import Card from "./reusable/Card.astro"
import { getCollection } from "astro:content"

const projects = await getCollection("projects")
---

<section
  id="projects"
  class="mb-10 flex flex-col items-center justify-center px-3"
>
  <h2 class="moveable-title text-2xl text-yellow-700 font-semibold lg:text-4xl">
    Projects
  </h2>
  <span class="mb-10 h-1 w-full bg-yellow-600 mt-1"></span>
  <div
    class="mb-10 grid place-items-center grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 items-center justify-center md:flex-row"
  >
    {
      projects.map((project) => (
        <Card
          image={project.data.image}
          url={project.data.link}
          title={project.data.title}
          alt={project.data.img_alt}
          tags={project.data.tags}
          desc={project.data.description}
          github={project.data.github}
        />
      ))
    }
  </div>
</section>
