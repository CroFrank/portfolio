---
import Card from "./reusable/Card.astro"
import { getCollection } from "astro:content"

const projects = await getCollection("projects")
---

<section
  id="projects"
  class="mb-10 flex flex-col items-center justify-center px-3"
>
  <h2 class="moveable-title text-2xl text-yellow-600 font-semibold lg:text-4xl">
    Projects
  </h2>
  <span class="mb-10 h-1 w-3/4 bg-yellow-500 mt-1"></span>
  <div class="mb-10 flex w-full flex-col flex-wrap items-center md:flex-row">
    {
      projects.map((project) => (
        <Card
          image={project.data.image}
          url={project.data.link}
          title={project.data.title}
          alt={project.data.img_alt}
          tags={project.data.tags}
        />
      ))
    }
  </div>
  <a
    href="https://github.com/CroFrank"
    target="_blank"
    rel="noopener"
    class="moveable-text flex flex-rowhover:text-orange dark:text-white dark:hover:text-orange"
    aria-label="link to GitHub repository"
  >
    Visit my GitHub profile
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="moveable-arrow ml-1 h-6 w-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
    </svg>
  </a>
</section>

<style>
  .moveable-arrow {
    transition: transform 0.5s ease-out;
  }

  .moveable-arrow:hover {
    transform: translateX(20px);
  }

  .moveable-text {
    transition: transform 0.5s ease-out;
  }

  .moveable-text:hover {
    transform: translateY(-5px);
  }

  .moveable-title {
    transition: transform 0.5s ease-out;
  }

  .moveable-title:hover {
    transform: translateY(-5px);
  }
</style>
